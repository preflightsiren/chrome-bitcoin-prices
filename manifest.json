{
  "manifest_version": 3,
  "name": "Satoshi Price Converter",
  "version": "1.0",
  "description": "Converts fiat prices on a page to Bitcoin (sats or BTC).",
  "action": {
    "default_title": "Toggle Price Converter"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ]
}

