{
  "manifest_version": 3,
  "name": "Satoshi Price Converter",
  "version": "1.1",
  "description": "Converts fiat prices on a page to Bitcoin (sats or BTC).",
  "action": {
    "default_title": "Toggle Price Converter"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webNavigation"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}

